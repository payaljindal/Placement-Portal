                    </div>
                    <div class="nav-menus-wrapper" style="transition-property: none;">
                        <ul class="nav-menu">
                        
                            <li><a href="/">Home</a></li>
							
								<%if (user && user.admin){%>
								<li><a href="/allusers">All students</a></li>
									<%}%>
